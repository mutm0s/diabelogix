<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Title -->
    <TextView
        android:id="@+id/text_settings_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Diabetes Settings"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:gravity="center"/>

    <!-- Machine Learning Model Training Button -->
    <Button
        android:id="@+id/btn_train_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Train Model"
        android:layout_margin="16dp"/>

    <!-- Other Settings Options -->
    <!-- Add more settings options as needed, like toggles, sliders, etc. -->

</LinearLayout>
