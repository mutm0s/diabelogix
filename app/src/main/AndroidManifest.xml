<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.DiabetesDetector"
        tools:targetApi="31">
        <activity
            android:name=".OnBoard"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".ui.bot.ChatBot" />
        <activity android:name=".AddDoctorActivity" />
        <activity android:name=".AddBmiActivity"/>
        <activity android:name=".AddWeightActivity"/>
        <activity android:name=".AddGlucoseActivity"/>
        <activity android:name=".LoginActivity"/>
        <activity android:name=".OptionsBoard"/>
    </application>

</manifest>